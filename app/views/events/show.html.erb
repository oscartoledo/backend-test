<div class="row bottom-separator">
  <div class="col-xs-12">
    <%= link_to billboard_events_path do %>
        <span class="fa fa-arrow-circle-left fa-3x"></span> <span class="fa-3x"><%= t :events %></span>
    <% end %>
  </div>
</div>
<div class="row top-margin">
  <div class="col-xs-8">
    <div class="row">
      <div class="col-xs-6">
        <h1><%= @event.name %><span class="label label-default location-label"><%= @event.location%></span></h1>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <p><%= @event.description %></p>
      </div>
    </div>
  </div>
  <div class="col-xs-4">
    <div class="row">
      <img class="img-responsive" src="<%= image_path @event.picture_url %>" alt="<%= @event.name%>" >
    </div>
    <div class="row top-margin">
      <table class="table table-striped table-condensed">
        <thead>
          <td><%= t :date %></td>
          <td><%= t :time %></td>
          <td><%= t :price %></td>
        </thead>
        <tbody>
          <% @event.billboards.each do |b|  %>
            <tr>
              <td><%= date_format b.show_date %></td>
              <td><%= time_format b.show_date %></td>
              <td><%= price_format b.price %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>